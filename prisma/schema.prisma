// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String    @id @default(uuid())
  username  String?
  email     String?
  createdAt DateTime  @default(now())
  sources   Source[]
  formulas  Formula[]
  styles    Style[]
  threads   Thread[]
}

model Source {
  id         String @id @default(uuid())
  name       String?
  type       String?
  category   String?
  title      String?
  text       String?
  embeddings Json[]
  userId     String
  user       User   @relation(fields: [userId], references: [id])
}

model Formula {
  id           String @id @default(uuid())
  title        String?
  instructions String?
  formula      String?
  thinkAbout   String?
  userId       String
  user         User   @relation(fields: [userId], references: [id])
}

model Style {
  id        String @id @default(uuid())
  title     String?
  examples  Json[]
  summary   String?
  blueprint String?
  sample    String?
  userId    String
  user      User   @relation(fields: [userId], references: [id])
}

model Thread {
  id             String   @id @default(uuid())
  created        DateTime @default(now())
  updated        DateTime @updatedAt
  initial_prompt String?
  messages       Json[]
  threads        Json?
  userId         String
  user           User     @relation(fields: [userId], references: [id])
}
